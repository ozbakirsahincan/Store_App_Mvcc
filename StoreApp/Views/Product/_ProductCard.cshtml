@model Product


<div class="col-md-4 my-3">

    <div class="card" style="width: 18rem;">
        <img src="https://placehold.co/200x200" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">Description</p>
            <div class="d-flex  col">

                <a asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-primary">
                    <i class="fa-solid fa-arrow-right"></i>
                    Go somewhere
                </a>
                <h6 class="mx-2 lead text-bg-secondary h-auto align-items-center" >@Model.Price.ToString("c")</h6>
            </div>
        </div>
    </div>
</div>